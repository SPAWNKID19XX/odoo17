<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="library_registry_form_view" model="ir.ui.view">
        <field name="name">library.registry.form.view</field>
        <field name="model">library.rental</field>
        <field name="arch" type="xml">
            <form string="Rental Registry">
                <sheet>
                    <group>
                        <group>
                            <field name="book_id"/>
                            <field name="customer_name"/>
                            <field name="rental_date"/>
                            <field name="return_date"/>
                        </group>
                    </group>
                </sheet>

            </form>
        </field>
    </record>

    <record id="library_registry_tree_view" model="ir.ui.view">
        <field name="name">library.registry.tree.view</field>
        <field name="model">library.rental</field>
        <field name="arch" type="xml">
            <tree string="Rental Registry">
                <field name="book_id"/>
                <field name="customer_name"/>
                <field name="rental_date"/>
                <field name="return_date"/>
            </tree>
        </field>
    </record>

    <record id="action_registry" model="ir.actions.act_window">
        <field name="name">Registry</field>
        <field name="res_model">library.rental</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="help" type="html">
            <p>Create New registry</p>
        </field>
    </record>
</odoo>