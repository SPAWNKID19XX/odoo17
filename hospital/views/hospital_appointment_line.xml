<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="hospital_appointment_line_tree_view" model="ir.ui.view">
        <field name="name">hospital.appointment.line.tree.view</field>
        <field name="model">hospital.appointment.line</field>
        <field name="arch" type="xml">
            <tree string="Patients" create="1" editable="top">
                <field name="appointment_id" string="Appointment"/>
                <field name="product_id" string="Products"/>
                <field name="qty" string="Quantity"/>
            </tree>

        </field>
    </record>


    <record id="action_appointment_line" model="ir.actions.act_window">
        <field name="name">Patients Line</field>
        <field name="res_model">hospital.appointment.line</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="hospital_appointment_line_tree_view"/>
        <field name="help" type="html">
            <p>Это список строк назначений пациентов.</p>
        </field>
    </record>


</odoo>
