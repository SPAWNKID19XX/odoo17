<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="hospital_patient_tags_tree_view" model="ir.ui.view">
            <field name="name">hospital.patient.tags.tree.view</field>
            <field name="model">hospital.patient.tag</field>
            <field name="arch" type="xml">
                <tree editable="top" string="Patient Tags">
                    <field name="name"/>
                </tree>
            </field>
        </record>


        <record id="action_tags_conf_hospital_patient" model="ir.actions.act_window">
            <field name="name">Patient Tags</field>
            <field name="res_model">hospital.patient.tag</field>
            <field name="view_mode">tree</field>
            <field name="help" type="html">
                <p>Create New Patient Tag</p>
            </field>
        </record>


    </data>
</odoo>