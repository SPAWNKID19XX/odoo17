<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="patients_form_view" model="ir.ui.view">
        <field name="name">patients.form.view</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <form string="Patients">
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="tag_ids" widget="many2many_tags"/>
                        </group>
                        <group>
                            <field name="gender"/>
                            <field name="birthday"/>
                        </group>
                        <notebook>
                            <page name="appointments" string="Appointments">
                                <field name="appointments_ids" nolabel="1">
                                    <tree editable="false">
                                        <field name="ref"/>
                                        <field name="date_appointments"/>
                                    </tree>
                                    <form>
                                        <group string="">
                                            <field name="ref"/>
                                            <field name="user_id" readonly="True"/>
                                            <field name="date_appointments"/>
                                            <field name="notes"/>
                                        </group>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </group>
                    <!-- Chatter -->
                    <div class="oe_chatter">
                        <field name="message_follower_ids" groups="base.group_user"/>
                        <field name="message_ids"/>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="patients_tree_view" model="ir.ui.view">
        <field name="name">patients.tree.view</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <tree string="Patients">
                <field name="name"/>
                <field name="gender" optional="hide"/>
                <field name="birthday" optional="hide"/>
                <field name="tag_ids" widget="many2many_tags"/>
            </tree>
        </field>
    </record>

    <record id="action_patients" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="help" type="html">
            <p>Create New Patient</p>
        </field>
    </record>
</odoo>